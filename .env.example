# Example environment variables for intelliform
# Copy this file to `.env` and fill values before running locally.
# IMPORTANT: Do NOT commit your `.env` file to source control. `.env` is already ignored by `.gitignore`.

# App runtime
NODE_ENV=development
FRONTEND_PORT=9090
SERVER_PORT=3000

# CORS / frontend hosts (comma-separated). In production, set to your frontend origin(s).
# Example: FRONTEND_HOSTS=https://app.example.com
FRONTEND_HOSTS=http://localhost:9090
ALLOW_ALL_ORIGINS=false

# Allow public admin-like endpoints in dev (true/false)
ALLOW_PUBLIC_ADMIN=false

# Debug flags (development only)
VITE_CANVAS_DEBUG=false

# Database (Postgres)
DB_USER=postgres
DB_PASSWORD=changeme
DB_HOST=localhost
DB_NAME=dqappdb
DB_PORT=5432

# External API keys
TINYMCE_API_KEY=YOUR_TINYMCE_API_KEY_HERE

# Optional: override for frontend when behind proxies or different host
FRONTEND_HOST=http://localhost:9090
 
# Client (Vite) runtime overrides - used by frontend code
# If set, these will be available as `import.meta.env.VITE_API_URL` and `import.meta.env.VITE_AUTH_URL`.
# Example for proxying through the frontend dev server: VITE_API_URL=/api
VITE_API_URL=/api
VITE_AUTH_URL=/auth
